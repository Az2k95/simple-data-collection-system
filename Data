print('Hello!')
name = input('whats your full name? ')
print('Hi ' + name)
first_name_end = (name.find(' '))
first_name = (name[:first_name_end])
last_name = (name[first_name_end + 1:])
birth_year = input('when were you born? ')
age = (2021 - int(birth_year))
if first_name_end == -1:
    print('you need to put a space in between your first and second name')
else:
     print('Name') 
     print(name)
     print('first name')
     print(first_name)
     print('last name')
     print(last_name)
     print('Age')
     print(age)
     print('Year of birth')
     print(birth_year)
